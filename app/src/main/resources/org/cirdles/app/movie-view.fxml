<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="100" minWidth="100" prefHeight="677.0" prefWidth="442.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cirdles.app.MovieController">
  <padding>
    <Insets bottom="20" left="20" right="20" top="20" />
  </padding>
  <TabPane VBox.vgrow="ALWAYS">
    <tabs>
      <Tab closable="false" text="Export Library">
        <VBox spacing="4">
          <VBox spacing="4">
            <Label text="Movie Name" />
            <TextField fx:id="nameField" promptText="Enter movie name" />
          </VBox>
          <VBox alignment="CENTER_LEFT" spacing="4">
            <Label text="Release Year" />
            <TextField fx:id="releaseField" promptText="Enter release year" />
          </VBox>
          <HBox alignment="CENTER" spacing="4">
            <ComboBox fx:id="genreComboBox" prefHeight="25.0" prefWidth="115.0" promptText="Select genre" />
            <Button alignment="CENTER" onAction="#addMovieButtonClicked" prefHeight="25.0" prefWidth="141.0" text="Add Movie" />
          </HBox>
          <HBox alignment="CENTER" spacing="4">
            <Button onAction="#onSaveXMLButtonClick" text="Save as XML" />
            <Button onAction="#onSaveCSVButtonClick" text="Save as CSV" />
            <Button onAction="#onSaveBinaryButtonClick" text="Save as Binary" />
          </HBox>
          <VBox minHeight="10" spacing="4">
                  <children>
               <Button contentDisplay="CENTER" onAction="#onEditButtonClick" prefHeight="25.0" prefWidth="60.0" text="Edit" />
                  </children></VBox>
             <ListView fx:id="movieListView" prefHeight="351.0" prefWidth="359.0" VBox.vgrow="ALWAYS" />
        </VBox>
      </Tab>
      <Tab closable="false" text="Import Library">
        <VBox alignment="CENTER" spacing="4">
          <Label text="Choose an option" />
          <HBox alignment="CENTER" spacing="4">
            <Button onAction="#onOpenXMLButtonClick" text="Import XML" />
            <Button onAction="#onOpenCSVButtonClick" text="Import CSV" />
            <Button onAction="#onOpenBinaryButtonClick" text="Import Binary" />
          </HBox>
        </VBox>
      </Tab>
    </tabs>
  </TabPane>
  <VBox maxHeight="400" VBox.vgrow="NEVER">
    <Button onAction="#removeButtonClicked" prefHeight="25.0" prefWidth="60.0" text="Remove" />
    <VBox minHeight="8" spacing="2" />
  </VBox>
  <Label fx:id="welcomeText" />
  <Button onAction="#onHelpButtonClick" text="Help" />
</VBox>
