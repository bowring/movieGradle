<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cirdles.app.MovieController">
  <MenuBar>
    <menus>
      <Menu text="Import">
        <items>
          <MenuItem text="Import XML" onAction="#onOpenXMLButtonClick" />
          <MenuItem text="Import CSV" onAction="#onOpenCSVButtonClick" />
          <MenuItem text="Import Binary" onAction="#onOpenBinaryButtonClick" />
        </items>
      </Menu>
      <Menu text="Export">
        <items>
          <MenuItem text="Save as XML" onAction="#onSaveXMLButtonClick" />
          <MenuItem text="Save as CSV" onAction="#onSaveCSVButtonClick" />
          <MenuItem text="Save as Binary" onAction="#onSaveBinaryButtonClick" />
        </items>
      </Menu>
      <Menu text="About">
        <items>
          <MenuItem text="Help" onAction="#onHelpButtonClick" />
        </items>
      </Menu>
    </menus>
  </MenuBar>

  <VBox spacing="4">
    <VBox spacing="4">
      <Label text="Movie Name" />
      <TextField fx:id="nameField" promptText="Enter movie name" />
    </VBox>
    <VBox alignment="CENTER_LEFT" spacing="4">
      <Label text="Release Year" />
      <TextField fx:id="releaseField" promptText="Enter release year" />
    </VBox>
    <HBox alignment="CENTER" spacing="4">
      <ComboBox fx:id="genreComboBox" prefHeight="25.0" prefWidth="115.0" promptText="Select genre" />
      <Button alignment="CENTER" onAction="#addMovieButtonClicked" prefHeight="25.0" prefWidth="141.0" text="Add Movie" />
    </HBox>
    <HBox alignment="CENTER" spacing="4">
      <Button onAction="#onEditButtonClick" text="Edit" />
    </HBox>
    <ListView fx:id="movieListView" prefHeight="351.0" prefWidth="359.0" VBox.vgrow="ALWAYS" />
  </VBox>
  <VBox maxHeight="400" VBox.vgrow="NEVER">
    <Button onAction="#removeButtonClicked" prefHeight="25.0" prefWidth="60.0" text="Remove" />
    <VBox minHeight="8" spacing="2" />
  </VBox>
  <Label fx:id="welcomeText" />
</VBox>
