<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<StackPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cirdles.app.MovieController">
  <!-- Logo -->
  <ImageView fx:id="logoImageView" fitWidth="200" fitHeight="200" StackPane.alignment="TOP_CENTER">
    <image>
      <Image url="@/org/cirdles/app/images/Movie.png" />
    </image>
  </ImageView>

  <VBox spacing="4" StackPane.alignment="TOP_CENTER">
    <MenuBar>
      <menus>
        <Menu text="Session">
          <items>
            <MenuItem onAction="#onNewSessionClicked" text="Start New Session" />
            <MenuItem onAction="#onCloseSessionClicked" text="Close Session" />
            <MenuItem onAction="#onQuitClicked" text="Quit" />
          </items>
        </Menu>
        <Menu text="Import">
          <items>
            <MenuItem onAction="#onOpenXMLButtonClick" text="Import XML" />
            <MenuItem onAction="#onOpenCSVButtonClick" text="Import CSV" />
            <MenuItem onAction="#onOpenBinaryButtonClick" text="Import Binary" />
          </items>
        </Menu>
        <Menu text="About">
          <items>
            <MenuItem onAction="#onHelpButtonClick" text="Help" />
          </items>
        </Menu>
      </menus>
    </MenuBar>

    <!-- Session Container and other elements -->
    <VBox fx:id="sessionContainer" spacing="4" visible="false">
      <VBox spacing="4">
        <Label text="Movie Name" />
        <TextField fx:id="nameField" promptText="Enter movie name" />
      </VBox>
      <VBox alignment="CENTER_LEFT" spacing="4">
        <Label text="Release Year" />
        <TextField fx:id="releaseField" promptText="Enter release year" />
      </VBox>
      <HBox alignment="CENTER" spacing="4">
        <ComboBox fx:id="genreComboBox" prefHeight="25.0" prefWidth="115.0" promptText="Select genre" />
        <Button alignment="CENTER" onAction="#addMovieButtonClicked" prefHeight="25.0" prefWidth="141.0"
                text="Add Movie" />
      </HBox>
      <HBox alignment="CENTER" spacing="4">
        <Button onAction="#onSaveXMLButtonClick" text="Save as XML" />
        <Button onAction="#onSaveCSVButtonClick" text="Save as CSV" />
        <Button onAction="#onSaveBinaryButtonClick" text="Save as Binary" />
      </HBox>
      <HBox alignment="CENTER" spacing="4">
        <Button onAction="#onEditButtonClick" text="Edit" />
        <Button onAction="#removeButtonClicked" prefHeight="25.0" prefWidth="60.0" text="Remove" />
      </HBox>
      <ListView fx:id="movieListView" prefHeight="351.0" prefWidth="359.0" VBox.vgrow="ALWAYS" />
    </VBox>
  </VBox>

  <VBox maxHeight="400" VBox.vgrow="NEVER">
    <VBox minHeight="8" spacing="2" />
  </VBox>

  <Label fx:id="welcomeText" />
</StackPane>