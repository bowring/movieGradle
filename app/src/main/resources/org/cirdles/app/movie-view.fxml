<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cirdles.app.MovieController">
  <!-- Logo -->
  <ImageView fx:id="logoImageView" fitHeight="340.0" fitWidth="298.0" StackPane.alignment="CENTER">
    <image>
      <Image url="@/org/cirdles/app/images/Movie.png" />
    </image>
  </ImageView>

  <Label fx:id="welcomeText" prefHeight="17.0" prefWidth="161.0" StackPane.alignment="BOTTOM_CENTER" />

     <VBox spacing="8" StackPane.alignment="TOP_CENTER">
    <MenuBar>
      <menus>
        <Menu text="Session">
          <items>
            <MenuItem onAction="#onNewSessionClicked" text="Start New Session" />
            <MenuItem onAction="#onCloseSessionClicked" text="Close Session" />
            <MenuItem onAction="#onQuitClicked" text="Quit" />
          </items>
        </Menu>
        <Menu text="Import">
          <items>
            <MenuItem onAction="#onOpenXMLButtonClick" text="Import XML" />
            <MenuItem onAction="#onOpenCSVButtonClick" text="Import CSV" />
            <MenuItem onAction="#onOpenBinaryButtonClick" text="Import Binary" />
          </items>
        </Menu>
        <Menu text="About">
          <items>
            <MenuItem onAction="#onHelpButtonClick" text="Help" />
          </items>
        </Menu>
      </menus>
    </MenuBar>

       <!-- Session Container and other elements -->
    <VBox fx:id="sessionContainer" prefWidth="310.0" spacing="8" visible="false">
      <VBox prefHeight="0.0" prefWidth="154.0" spacing="4">
        <Label text="Movie Name" />
        <TextField fx:id="nameField" prefHeight="25.0" prefWidth="343.0" promptText="Enter movie name" />
      </VBox>
      <VBox alignment="CENTER_LEFT" prefHeight="34.0" prefWidth="301.0" spacing="4">
        <Label text="Release Year" />
        <TextField fx:id="releaseField" promptText="Enter release year" />
      </VBox>
      <HBox alignment="CENTER" spacing="4">
        <ComboBox fx:id="genreComboBox" prefHeight="25.0" prefWidth="115.0" promptText="Select genre" />
        <Button alignment="CENTER" onAction="#addMovieButtonClicked" prefHeight="25.0" prefWidth="141.0" text="Add Movie" />
      </HBox>
      <HBox alignment="CENTER" spacing="4">
        <Button onAction="#onSaveXMLButtonClick" text="Save as XML" />
        <Button onAction="#onSaveCSVButtonClick" text="Save as CSV" />
        <Button onAction="#onSaveBinaryButtonClick" text="Save as Binary" />
      </HBox>
      <HBox alignment="CENTER" spacing="4">
        <Button onAction="#onEditButtonClick" text="Edit" />
        <Button onAction="#removeButtonClicked" prefHeight="25.0" prefWidth="60.0" text="Remove" />
      </HBox>
      <ListView fx:id="movieListView" prefHeight="351.0" prefWidth="310.0" VBox.vgrow="ALWAYS">
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
         </ListView>
         <Label fx:id="welcomeText1" alignment="CENTER" prefHeight="7.0" prefWidth="309.0" textAlignment="CENTER" />
    </VBox>
  </VBox>
</StackPane>
