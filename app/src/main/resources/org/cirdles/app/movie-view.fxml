<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="632.0" prefWidth="345.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cirdles.app.MovieController">

    <ImageView fx:id="logoImageView" fitHeight="340.0" fitWidth="298.0" StackPane.alignment="CENTER">
        <image>
            <Image url="@/org/cirdles/app/images/Movie.png" />
        </image>
    </ImageView>

    <VBox spacing="8" StackPane.alignment="TOP_CENTER">
        <MenuBar>
            <menus>
                <Menu text="Movie Library">
                    <items>
                        <MenuItem onAction="#onNewSessionClicked" text="Start New Library" />
                        <MenuItem onAction="#openDemonstrationSessionMenuItemAction" text="Open Demonstration Library" />
                        <MenuItem onAction="#onCloseSessionClicked" text="Close Library" />
                        <SeparatorMenuItem />
                        <MenuItem onAction="#onQuitClicked" text="Quit" />
                    </items>
                </Menu>
                <Menu text="Import">
                    <items>
                        <MenuItem onAction="#onOpenXMLButtonClick" text="Import XML" />
                        <MenuItem onAction="#onOpenCSVButtonClick" text="Import CSV" />
                        <MenuItem onAction="#onOpenBinaryButtonClick" text="Import Binary" />
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <MenuItem onAction="#onHelpButtonClick" text="About" />
                        <MenuItem onAction="#openDocumentation" text="Documentation" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <VBox fx:id="sessionContainer" prefWidth="310.0" spacing="8" visible="false">
            <VBox prefHeight="0.0" prefWidth="154.0" spacing="4">
                <Label text="Movie Name" />
                <TextField fx:id="nameField" prefHeight="25.0" prefWidth="217.0" promptText="Enter movie name" />
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="34.0" prefWidth="301.0" spacing="4">
                <Label text="Release Year" />
                <TextField fx:id="releaseField" prefHeight="25.0" prefWidth="180.0" promptText="Enter release year" />
            </VBox>
            <HBox alignment="CENTER" spacing="4">
                <ComboBox fx:id="genreComboBox" prefHeight="25.0" prefWidth="394.0" promptText="Select genre">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </ComboBox>
            </HBox>
            <HBox alignment="CENTER">
                <Button contentDisplay="CENTER" onAction="#addMovieButtonClicked" prefHeight="25.0" prefWidth="340.0" text="Add Movie" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </Button>
            </HBox>
            <HBox alignment="CENTER" spacing="4">
                <Button contentDisplay="CENTER" onAction="#onSaveXMLButtonClick" prefHeight="25.0" prefWidth="115.0" text="Save as XML" textAlignment="CENTER" />
                <Button contentDisplay="CENTER" onAction="#onSaveCSVButtonClick" prefHeight="25.0" prefWidth="115.0" text="Save as CSV" textAlignment="CENTER" />
                <Button contentDisplay="CENTER" onAction="#onSaveBinaryButtonClick" prefHeight="25.0" prefWidth="115.0" text="Save as Binary" textAlignment="CENTER" />
            </HBox>

            <HBox alignment="CENTER">
                <Label fx:id="welcomeText" alignment="CENTER" prefHeight="17.0" prefWidth="335.0">
               <HBox.margin>
                  <Insets bottom="-3.0" top="-3.0" />
               </HBox.margin></Label>
            </HBox>

            <TableView fx:id="movieTableView" prefHeight="405.0" prefWidth="335.0" VBox.vgrow="ALWAYS">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="nameColumn" prefWidth="85.0" text="Name" />
                    <TableColumn fx:id="releaseYearColumn" prefWidth="81.0" text="Release Year" />
                    <TableColumn fx:id="genreColumn" prefWidth="71.0" text="Genre" />
                    <TableColumn fx:id="actionColumn" prefWidth="92.0" text="Action" />
                </columns>
                <VBox.margin>
                    <Insets bottom="5.0" />
                </VBox.margin>
            </TableView>
            <padding>
                <Insets left="5.0" right="5.0" />
            </padding>
        </VBox>
    </VBox>
</StackPane>
